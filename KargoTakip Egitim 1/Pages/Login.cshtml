@page
@model KargoTakip_Egitim_1.Pages.LoginModel
@{
    Layout = "_Layout";
    ViewBag.BodyClass = "d-flex align-items-center py-4 bg-body-tertiary";
}

@section Head {
    <link href="~/assets/css/login.css" rel="stylesheet" />
}

<main class="form-signin w-100 m-auto">
    <form method="post" asp-page="Login">
        
       
        <h1 class="h3 mb-3 fw-normal">Kargo Personel Sistemi</h1>
        @Model.Msg
        <div class="form-floating">
            <input type="text" class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="@Model.UserName">
            <label for="floatingInput">Kullanıcı Adı</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password" asp-for="@Model.Password">
            <label for="floatingPassword">Şifre</label>
        </div>

        
        <button class="btn btn-primary w-100 py-2" type="submit" value="Login" >Giriş </button>
        <p class="mt-5 mb-3 text-body-secondary">&copy; Desinged in August 2023</p>
    </form>
</main>